
# Configurações para site dinâmico em hospedagem compartilhada
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Redirecionar www para non-www (ou vice-versa, dependendo da preferência)
  # Descomente a opção que preferir
  
  # Opção 1: Redirecionar non-www para www
  # RewriteCond %{HTTP_HOST} ^urbis\.com\.br [NC]
  # RewriteRule ^(.*)$ https://www.urbis.com.br/$1 [L,R=301]
  
  # Opção 2: Redirecionar www para non-www
  # RewriteCond %{HTTP_HOST} ^www\.urbis\.com\.br [NC]
  # RewriteRule ^(.*)$ https://urbis.com.br/$1 [L,R=301]
  
  # Tratamento específico para as pastas dist e assets
  RewriteCond %{REQUEST_URI} ^/dist/assets/(.*)$
  RewriteRule ^dist/assets/(.*)$ /assets/$1 [L]
  
  # Servir arquivos e diretórios existentes diretamente
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Encaminhar todas as outras solicitações para index.html
  RewriteRule ^ index.html [L]
</IfModule>

# Configurações de cache para melhor desempenho
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Arquivos de mídia e estáticos
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  
  # HTML e dados dinâmicos com cache reduzido
  ExpiresByType text/html "access plus 10 minutes"
  ExpiresByType application/json "access plus 5 minutes"
</IfModule>

# Definir tipos MIME para arquivos estáticos
<IfModule mod_mime.c>
  AddType application/javascript .js
  AddType text/css .css
  AddType image/svg+xml .svg
  AddType application/font-woff .woff
  AddType application/font-woff2 .woff2
</IfModule>

# Compressão de arquivos para melhor desempenho
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE application/json
</IfModule>

# CORS Headers para permitir solicitações de API
<IfModule mod_headers.c>
  <FilesMatch "\.(json)$">
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type"
  </FilesMatch>
</IfModule>

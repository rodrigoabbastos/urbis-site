
# Enable rewriting
RewriteEngine On
RewriteBase /

# CRITICAL FIX: Set appropriate MIME types for JavaScript files
<FilesMatch "\.(js|jsx)$">
  ForceType application/javascript
  Header set Content-Type "application/javascript; charset=utf-8"
</FilesMatch>

<FilesMatch "\.css$">
  ForceType text/css
  Header set Content-Type "text/css; charset=utf-8"
</FilesMatch>

# If an existing asset or directory is requested, serve it directly
RewriteCond %{DOCUMENT_ROOT}%{REQUEST_URI} -f [OR]
RewriteCond %{DOCUMENT_ROOT}%{REQUEST_URI} -d
RewriteRule ^ - [L]

# Serve assets from the correct locations
RewriteRule ^assets/(.*)$ /dist/assets/$1 [L]
RewriteRule ^dist/assets/(.*)$ /dist/assets/$1 [L]

# If the requested resource doesn't exist, serve index.html
RewriteRule ^ index.html [L]

# Security headers
<IfModule mod_headers.c>
  # Enhanced security headers
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
  
  # Add CORS headers to allow API calls
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
  Header set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization"
  
  # Reduced cache for dynamic content
  <FilesMatch "\.(json|html)$">
    Header set Cache-Control "max-age=600, must-revalidate"
  </FilesMatch>
</IfModule>

# Proper MIME types (reinforced)
<IfModule mod_mime.c>
  AddType application/javascript .js
  AddType application/javascript .jsx
  AddType text/css .css
  AddType image/svg+xml .svg
</IfModule>
